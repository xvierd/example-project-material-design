<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ly_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_mascot"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop" />
        </LinearLayout>


        <ImageButton
            android:id="@+id/image_button_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ly_image"
            android:layout_marginLeft="0dp"
            android:visibility="gone"
            android:src="@drawable/like_button" />

        <TextView
            android:layout_toEndOf="@+id/image_button_like"
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ly_image"
            android:layout_toRightOf="@+id/image_button_like" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/ly_image"
            android:layout_alignRight="@id/ly_image"
            android:layout_below="@+id/ly_image"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_total_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/img_total_likes"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/total_likes" />
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
